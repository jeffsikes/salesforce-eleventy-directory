<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Salesforce Users</title>
    <style>
        .user-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr); /* Ensure 3 columns */
            gap: 10px; /* Space between items */
        }
        .h-card {
            display: flex;
            align-items: center;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 5px;
            box-sizing: border-box;
            overflow: hidden; /* Ensure the content is clipped */
            background-color: lightblue;
        }
        .u-photo {
            margin-right: 10px;
            border-radius: 50%;
            width: 40px;
            height: 40px;
            flex-shrink: 0; /* Prevent the image from shrinking */
        }
        .user-info {
            min-width: 0; /* Ensures the flex item can shrink below its content's width */
            overflow: hidden;
        }
        .p-name,
        .p-email {
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }
        #search-box {
            margin-bottom: 20px;
            padding: 10px;
            width: 100%;
            box-sizing: border-box;
            border: 1px solid #ddd;
            border-radius: 5px;
        }
        .hidden {
            display: none;
        }
        .blur-text {
            filter: blur(5px); /* Apply blur effect */
        }
        .u-url {
            color: inherit;
            display: block;
            width: 100%;
        }
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 20px;
            background-color: #f9f9f9;
        }
        @media (max-width: 768px) {
            .user-grid {
                grid-template-columns: repeat(2, 1fr); /* 2 columns for medium screens */
            }
        }
        @media (max-width: 480px) {
            .user-grid {
                grid-template-columns: 1fr; /* 1 column for small screens */
            }
        }
    </style>
</head>
<body>
    <h1 aria-live="assertive" aria-atomic="true">Salesforce Users</h1>
    <input type="text" id="search-box" placeholder="Search by name or email..." onkeyup="filterUsers()" aria-label="Search by name or email">
    <div id="no-results" class="hidden" role="alert" aria-live="assertive" aria-atomic="true">No users were found matching your criteria.</div>
    <div class="user-grid" id="user-grid" role="list">
        {% for user in collections.salesforceUsers %}
            <div class="h-card" role="listitem">
                {% if user.SmallPhotoUrl.length > 0 %}
                    <img src="{{ user.SmallPhotoUrl }}" alt="Profile Image" class="u-photo" />
                {% endif %}
                <div class="user-info">
                    <a href="{{ env.SF_LOGIN_URL }}/{{ user.Id }}"
                       class="u-url p-name{% if user.FirstName != 'Jeff' %} blur-text{% endif %}"
                       aria-label="Profile of {{ user.FirstName }} {{ user.LastName }}">
                        {{ user.FirstName }} {{ user.LastName }}
                    </a>
                    <div class="p-email{% if user.FirstName != 'Jeff' %} blur-text{% endif %}">
                        {{ user.Email }}
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

    <script>
        function filterUsers() {
            const searchBox = document.getElementById('search-box');
            const filter = searchBox.value.toLowerCase();
            const userGrid = document.getElementById('user-grid');
            const users = userGrid.getElementsByClassName('h-card');
            let visibleCount = 0;

            for (let i = 0; i < users.length; i++) {
                const name = users[i].getElementsByClassName('p-name')[0].textContent.toLowerCase();
                const email = users[i].getElementsByClassName('p-email')[0].textContent.toLowerCase();
                if (name.includes(filter) || email.includes(filter)) {
                    users[i].style.display = '';
                    visibleCount++;
                } else {
                    users[i].style.display = 'none';
                }
            }

            const noResults = document.getElementById('no-results');
            if (visibleCount === 0) {
                noResults.textContent = "No users were found matching your criteria.";
                noResults.classList.remove('hidden');
            } else {
                noResults.textContent = "";
                noResults.classList.add('hidden');
            }
        }
    </script>
</body>
</html>
